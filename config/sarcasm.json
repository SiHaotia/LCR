{
    "dataset": {
        "dataset_name": "sarcasm",
        "data_root":"/data/php_code/data_processing"
    },
    "visual": {
        "name": "resnet50"
    },
    "text": {
        "name": "bert-base"
    },
    "loss": {
        "type": "CrossEntropy"
    },
    "train": {
        "epoch_dict": 20,
        "batch_size":32,
        "mixup_alpha": 1.0,
        "temperature1" : 0.4 ,
        "flat_ratio": 0.3,
        "noise_ratio": 1.0e-15,
        "noise_ratio_cls":1.0e-15,
        "up_limit": 1.0,
        "optimizer": {
            "type": "ADAM", 
            "momentum": 0.9,
            "lr":1e-5,
            "wc" : 1.0e-4
        },
        "lr_scheduler":{
            "type": "warmup",
            "lr_step": [160, 180],
            "lr_factor": 0.1,
            "warmup_epoch": 2,
            "patience":30
        }
    },
    "test": {
        "batch_size":32,
        "num_workers":8
    },
    "setting": {
        "type": "Sarcasm Classification",
        "num_class": 2,
        "num_layers": 5
    },
    "seed": 49,
    "gpu_id": "4",
    "image_res": 224,
    "train_file":  "/data/php_code/data_processing/Sarcasm/annotations/train_data.json",
    "test_file": "/data/php_code/data_processing/Sarcasm/annotations/test_data.json",
    "image_root": "/data/php_code/data_processing/Sarcasm/images/",
    "max_tokens" : 30,
    "debug": false
}
